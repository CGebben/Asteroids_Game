<?xml version="1.0" encoding="UTF-8"?>

<!-- Import necessary JavaFX components -->
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<!-- 
  VBox container for the main menu.
  - Alignment is CENTER, spacing set to 20px.
  - Background color is black.
  - Controller is set to `com.asteroids.Controller`
-->
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.asteroids.Controller" style="-fx-background-color: black"
      prefWidth="800" prefHeight="600">

    <padding>
        <Insets top="40.0" bottom="40.0" left="50.0" right="50.0"/>
    </padding>

    <Text text="ASTEROIDS" fill="WHITE" style="-fx-font-weight: bold; -fx-font-size: 48;" />

    <Button fx:id="startButton"
            text="START"
            onAction="#start"
            maxWidth="300"
            minHeight="60"
            style="-fx-font-size: 24; -fx-background-color: white; -fx-border-color: white;"
            alignment="CENTER" />

    <Button fx:id="scoreButton"
            text="SCOREBOARD"
            onAction="#displayScore"
            maxWidth="300"
            minHeight="60"
            style="-fx-font-size: 24; -fx-background-color: white; -fx-border-color: white;"
            alignment="CENTER" />

    <Button fx:id="howToButton"
            text="HOW TO PLAY"
            onAction="#displayHowTo"
            maxWidth="300"
            minHeight="60"
            style="-fx-font-size: 24; -fx-background-color: white; -fx-border-color: white;"
            alignment="CENTER" />
</VBox>